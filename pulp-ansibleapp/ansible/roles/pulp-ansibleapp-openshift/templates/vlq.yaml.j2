{% if create_pvs == true %}
apiVersion: v1
kind: PersistentVolume
metadata:
  name: vlq
spec:
  capacity:
    storage: 1Gi
  accessModes:
    - ReadWriteMany
  hostPath:
    path: "{{ pv_base_path }}/vlq"

---
{% endif %}
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: vlq
spec:
  accessModes:
    - ReadWriteMany
  resources:
    requests:
      storage: 1Gi
